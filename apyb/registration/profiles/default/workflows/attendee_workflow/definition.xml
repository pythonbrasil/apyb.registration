<?xml version="1.0"?>
<dc-workflow workflow_id="attendee_workflow" title="Workflow for a conference attendee" description="Workflow to manage conference attendees" state_variable="state" initial_state="pending" manager_bypass="False">
 <permission>Access contents information</permission>
 <permission>View</permission>
 <permission>Modify portal content</permission>
 <state state_id="cancelled" title="Cancelled">
  <description>Attendee will not be at the conference</description>
  <permission-map name="Access contents information" acquired="False">
   <permission-role>Editor</permission-role>
   <permission-role>Manager</permission-role>
   <permission-role>Owner</permission-role>
  </permission-map>
  <permission-map name="Modify portal content" acquired="False">
   <permission-role>Editor</permission-role>
   <permission-role>Manager</permission-role>
  </permission-map>
  <permission-map name="View" acquired="False">
   <permission-role>Editor</permission-role>
   <permission-role>Manager</permission-role>
   <permission-role>Owner</permission-role>
  </permission-map>
 </state>
 <state state_id="confirmed" title="Confirmed">
  <description>Confirmed attendee</description>
  <exit-transition transition_id="cancel"/>
  <permission-map name="Access contents information" acquired="False">
   <permission-role>Editor</permission-role>
   <permission-role>Manager</permission-role>
   <permission-role>Owner</permission-role>
  </permission-map>
  <permission-map name="Modify portal content" acquired="False">
   <permission-role>Editor</permission-role>
   <permission-role>Manager</permission-role>
   <permission-role>Owner</permission-role>
  </permission-map>
  <permission-map name="View" acquired="False">
   <permission-role>Editor</permission-role>
   <permission-role>Manager</permission-role>
   <permission-role>Owner</permission-role>
  </permission-map>
 </state>
 <state state_id="pending" title="Pending">
  <description>Attendee presence at conference still in pending state</description>
  <exit-transition transition_id="cancel"/>
  <exit-transition transition_id="confirm"/>
  <permission-map name="Access contents information" acquired="False">
   <permission-role>Editor</permission-role>
   <permission-role>Manager</permission-role>
   <permission-role>Owner</permission-role>
  </permission-map>
  <permission-map name="Modify portal content" acquired="False">
   <permission-role>Editor</permission-role>
   <permission-role>Manager</permission-role>
   <permission-role>Owner</permission-role>
  </permission-map>
  <permission-map name="View" acquired="False">
   <permission-role>Editor</permission-role>
   <permission-role>Manager</permission-role>
   <permission-role>Owner</permission-role>
  </permission-map>
 </state>
 <transition transition_id="cancel" title="Cancel" new_state="cancelled" trigger="USER" before_script="" after_script="">
  <description>Attendee will not be at the conference</description>
  <action url="%(content_url)s/content_status_modify?workflow_action=cancel" category="workflow" icon="">Cancel</action>
  <guard>
   <guard-permission>Review portal content</guard-permission>
  </guard>
 </transition>
 <transition transition_id="confirm" title="Confirm" new_state="confirmed" trigger="USER" before_script="" after_script="">
  <description>Confirm presence</description>
  <action url="%(content_url)s/content_status_modify?workflow_action=confirm" category="workflow" icon="">Confirm</action>
  <guard>
   <guard-permission>Review portal content</guard-permission>
  </guard>
 </transition>
</dc-workflow>
